<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".NotificationActivity">


    <TextView
        android:id="@+id/not_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="New Order"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/not_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/app" />
<LinearLayout
    android:layout_marginTop="20dp"
    android:id="@+id/lin_o"
    android:gravity="center"
    android:layout_below="@id/img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/body_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="O123123123123"
        android:textSize="24sp" />

</LinearLayout>

    <TextView
        android:id="@+id/view_all"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lin_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/green"
        android:text="See All Order Details"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:id="@+id/confirm_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_not"
            android:backgroundTint="@color/white"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/cancel_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>